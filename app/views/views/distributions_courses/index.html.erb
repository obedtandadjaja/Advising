<div class="container-fluid">
    <div class="row col-md-12">
        <div class="col-md-12 text-center" style="margin: 10px 10px 20px 10px">
            <a href="/distributions_courses/new"><button class="btn btn-default">Add A Distribution's Course</button></a>
        </div>

        <% @distributions.each do |distribution| %>
            <div class="panel panel-default col-md-4" style="padding: 0 0 0 0; margin: 10px">
                <div class="panel-heading">
                    <%= distribution.title %>
                </div>

                <% distribution.course.each do |course| %>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="col-sm-10">
                                <p><%= course.subject %> <%= course.number %> - <%= course.credit %></p>
                                <p><%= course.title %></p>
                            </div>
                            <%= link_to distributions_course_path(:distribution_id => distribution.id, :id => course.id), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => "col-sm-2" do %>
                                <i class="fa fa-times"></i>
                            <% end %>
                        </div>
                    </div>
                <% end %>
            </div>
        <% end %>
                

        </div>
    </div>
</div>