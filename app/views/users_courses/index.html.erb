<div class="container-fluid">
    <div class="row col-md-12">
        <div class="col-md-12 text-center" style="margin: 10px 10px 20px 10px">
            <a href="/users_courses/new"><button class="btn btn-default">Add A User's Course</button></a>
        </div>
                    
                <% @users.each do |user| %>
                    <div class="panel panel-default col-md-4" style="padding: 0 0 0 0">
                        <div class="panel-heading">
                            <%= link_to users_course_path(:id => user.id), :method => :get do %><%= user.name %><% end %>
                        </div>
                        <% user.course.each do |course| %>
                        <div class="panel-body">
                            <div class="col-sm-10">
                                <p><%= course.subject %> <%= course.number %> - <%= course.hr_low %></p>
                                <p><%= course.title %></p>
                            </div>
                            <%= link_to users_course_path(:user_id => user.id, :id => course.id), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => "col-sm-2" do %>
                                    <i class="fa fa-times"></i>
                                <% end %>
                        </div>
                        <% end %>
                    </div>
                <% end %>

        </div>
    </div>
</div>