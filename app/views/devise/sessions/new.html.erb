<div class="row">
  <div class="col s12">
    <div class="card">
    <div class="card-image">
      <img src="/images/picture.jpg">
      <span class="card-title white-text">Login</span>
    </div>
      <div class="card-content">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>

        <div class="row">
          <div class="col l6 m6 s12">
            <div class="input-field col s12">
              <%= f.email_field :email, class: 'form-control' %>
              <label for="email">Email Address</label>
            </div>

            <div class="input-field col s12">
              <%= f.password_field :password, class: 'form-control' %>
              <label for="password">Password</label>
            </div>
            <div class="input-field col s12">
                <div class="checkbox">
                  <% if devise_mapping.rememberable? -%>
                    <%= f.check_box :remember_me %>
                    <label for="user_remember_me">Remember me</label>
                  <% end %>
                </div>
            </div>
          </div>
          <div class="col l6 m6 s12">
            <h5>Too lazy to register?</h5>
            <%= form_for(:user, url: '/create_guest') do |f| %>
              <%= f.submit "Log in as guest", class: "btn blue-grey" %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="input-field col s12">
            <%= f.submit "Log in", class: 'waves-effect waves-light btn blue-grey' %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'waves-effect waves-light btn blue-grey' %>
          </div>
        </div>
        <% end %>
      </div>
  </div>
  </div>
</div>