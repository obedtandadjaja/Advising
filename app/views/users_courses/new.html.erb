<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Add A User's Course</div>
                <div class="panel-body">

                    <%= form_for :users_course, url: '/users_courses', html:{class: "form-horizontal"} do |f| %>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Taken On</label>
                            <div class="col-md-6">
                                <%= f.date_field :taken_on, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">User</label>
                            <div class="col-md-6">
                                <%= collection_select(:users_course, :user_id, User.all, :id, :name, {:prompt => true}, {:class => 'form-control'}) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Course</label>
                            <div class="col-md-6">
                                <%= collection_select(:users_course, :course_id, Course.all, :id, :title, {:prompt => true}, {:class => 'form-control'}) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                <%= f.submit "Submit", class: "btn btn-default" %>
                            </div>
                        </div>

                    <% end %>
                
                </div>
            </div>
        </div>
    </div>
</div>