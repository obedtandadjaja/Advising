<% content_for :script do %>
    <%= javascript_include_tag "majors_concentration/main" %>
<% end %>

<% content_for :css do %>
    <style>
        [data-tip] {
            position:relative;
        }
        [data-tip]:before {
            content:'';
            /* hides the tooltip when not hovered */
            display:none;
            content:'';
            border-top: 5px solid transparent;
            border-bottom: 5px solid transparent;
            border-right: 5px solid #000;
            position:absolute;
            top: 10px;
            left: 100%;
            z-index:8;
            font-size:0;
            line-height:0;
            width:0;
            height:0;
        }
        [data-tip]:after {
            display:none;
            content:attr(data-tip);
            position:absolute;
            left: 101%;
            top: 3px;
            padding:5px 8px;
            background:#1a1a1a;
            color:#fff;
            z-index:9;
            font-size: 0.75em;
            height: 2.5em;
            line-height:18px;
            -webkit-border-radius: 3px;
            -moz-border-radius: 3px;
            border-radius: 3px;
            white-space:nowrap;
            word-wrap:normal;
        }
        [data-tip]:hover:before,
        [data-tip]:hover:after {
            display:block;
        }
    </style>
<% end %>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Register</div>
                <div class="panel-body">

                    <%= form_for :user, url: '/users', html:{class: "form-horizontal"} do |f| %>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Name</label>
                            <div class="col-md-6" data-tip="Your full name">
                                <%= f.text_field :name, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">E-Mail Address</label>
                            <div class="col-md-6" data-tip="Your Covenant email">
                                <%= f.email_field :email, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Banner ID</label>
                            <div class="col-md-6" data-tip="Your Covenant Banner ID">
                                <%= f.text_field :banner_id, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Enrollment Year</label>
                            <div class="col-md-6" data-tip="e.g. 2015">
                                <%= f.number_field :enrollment_time, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Expected Graduation Year</label>
                            <div class="col-md-6"  data-tip="e.g. 2019">
                                <%= f.number_field :graduation_time, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Password</label>
                            <div class="col-md-6" data-tip="Password must be 6 characters long">
                                <%= f.password_field :password, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Confirm Password</label>
                            <div class="col-md-6">
                                <%= f.password_field :password_confirmation, class: 'form-control' %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Major</label>
                            <div class="col-md-6" data-tip="Leave blank if undecided">
                                <%= collection_select(:user, :major_id, Major.order(:name), :id, :name, {:prompt => true}, {:class => 'form-control chosen-select', :multiple => true, :id => 'major_select'}) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Minor</label>
                            <div class="col-md-6" data-tip="Leave blank if undecided">
                                <%= collection_select(:user, :minor_id, Minor.order(:name), :id, :name, {:prompt => true}, {:class => 'form-control chosen-select', :multiple => true}) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-md-4 control-label">Concentration</label>
                            <div class="col-md-6">
                                <%= grouped_collection_select(:user, :concentration_id, Major.order(:name), :concentration, :name, :id, :name, {:prompt => true}, {:class => 'form-control chosen-select', :multiple => true, :id => 'concentration_select'}) %>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-6 col-md-offset-4">
                                <%= f.submit "Submit", class: "btn btn-default" %>
                            </div>
                        </div>

                    <% end %>
                
                </div>
            </div>
        </div>
    </div>
</div>