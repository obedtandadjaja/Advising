<div class="container-fluid">
    <div class="row">
        <div class="col-md-12 text-center" style="margin: 10px 10px 20px 10px">
            <a href="/users_courses/new"><button class="btn btn-default">Add A Course</button></a>
        </div>
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading"><%= @user.name %>'s Courses</div>
                <div class="panel-body">
                  <table class="table table-hover">
                    <thead>
                      <th>Course</th>
                      <th>Name</th>
                      <th>Credit</th>
                      <th><i class="fa fa-times" style="display:none"></i></th>
                    </thead>
                    <tbody>
                      <% @user.course.order(:title).each do |course| %>
                          <tr>
                            <td><%= course.subject %> <%= course.course_number %></td>
                            <td><%= course.title %></td>
                            <td><%= course.hr_low %><% if course.hr_high?%>-<%= course.hr_high %><% end %></td>
                            <td>
                              <%= link_to users_course_path(:user_id => @user.id, :id => course.id), :method => :delete, :data => {:confirm => 'Are you sure?'}, :class => "col-sm-2" do %>
                                <i class="fa fa-times"></i>
                              <% end %>
                            </td>
                          </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
            <div class="panel-footer">Total Hours: <%= @total_hours %></div>
        </div>
    </div>
</div>