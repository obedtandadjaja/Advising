<div class="container-fluid">
    <div class="row col-md-12">
        <div class="col-md-12 text-center" style="margin: 10px 10px 20px 10px">
            <a href="/users_minors/new"><button class="btn btn-default">Add A User's Minor</button></a>
        </div>
                    
                <% @users.each do |user| %>
                    <div class="panel panel-default col-md-4" style="padding: 0 0 0 0; margin: 10px">
                        <div class="panel-heading">
                            <%= link_to users_minor_path(:id => user.id), :method => :get do %><%= user.name %><% end %>
                        </div>
                        <div class="panel-body">
                          <table class="table table-hover">
                            <thead>
                              <th>Major</th>
                              <th>Department</th>
                              <th><i class="fa fa-times" style="display:none"></i></th>
                            </thead>
                            <tbody>
                              <% user.minor.order(:name).each do |minor| %>
                                  <tr>
                                    <td>
                                      <%= link_to minor_path(:id => minor.id), :method => :get do %>
                                        <%= minor.name %>
                                      <% end %>
                                    </td>
                                    <td><%= minor.department %></td>
                                  </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div>
                    </div>
                <% end %>

        </div>
    </div>
</div>