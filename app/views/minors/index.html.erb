<div class="container-fluid">
    <div class="row">
        <div class="col s12 text-center" style="margin-bottom: 20px">
            <a href="/minors/new"><button class="btn btn-default">Add A Minor</button></a>
            <input type="search" id="search" value="" class="form-control" placeholder="Search...">
        </div>
        <div class="col s12">
            <div class="panel panel-default">
                <div class="panel-heading">Minors</div>
                <div class="panel-body">
                  <table class="table table-hover">
                    <thead>
                      <tr>
                        <th>Minor</th>
                        <th>Department</th>
                        <th>Total Hours:</th>
                        <th><i class="fa fa-times" style="display:none"></i></th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @minors.each do |minor| %>
                        <tr>
                            <td>
                              <%= link_to minor_path(:id => minor.id), :method => :get do %>
                                <%= minor.name %>
                              <% end %>
                            </td>
                            <td>
                              <%= minor.department %>
                            </td>
                            <td><%= minor.total_hours %></td>
                          <td>
                            <%= link_to minor_path(:id => minor.id), :method => :delete, :data => {:confirm => 'Are you sure?'} do %>
                              <i class="fa fa-times"></i>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
        </div>
    </div>
</div>